<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="24dp"
    android:fontFamily="@font/inter"
    android:elevation="6dp">

    <TextView
        android:id="@+id/textTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task title"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description goes here"
        android:textColor="@color/text_primary"
        android:textSize="13sp"
        android:lineSpacingExtra="2dp"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:dividerPadding="6dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/textPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Priority: Normal"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start date: 2025-10-24"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End date: 2025-10-31"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created at: 14:32"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: In progress"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="100dp"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/alerta_primary"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            app:cornerRadius="50dp"
            android:elevation="1dp" />
    </LinearLayout>


</LinearLayout>
