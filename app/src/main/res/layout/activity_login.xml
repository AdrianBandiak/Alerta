<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/backgroundWave"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backgorund_2"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <LinearLayout
            android:id="@+id/login_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/logo_alerta"
                android:contentDescription="@string/content_desc_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/inter"
                android:layout_marginTop="24dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/hint_grey"
                app:endIconMode="clear_text"
                app:endIconTint="@color/hint_grey"
                app:hintTextColor="@color/text_secondary"
                app:boxStrokeColor="@color/text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/hint_grey"
                    android:fontFamily="@font/inter" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:startIconDrawable="@drawable/ic_password_lock"
                app:startIconTint="@color/hint_grey"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/hint_grey"
                app:hintTextColor="@color/text_secondary"
                app:boxStrokeColor="@color/text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/hint_grey"
                    android:fontFamily="@font/inter" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/log_in"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/alerta_primary"
                android:elevation="1dp" />

            <TextView
                android:id="@+id/textViewRegisterLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
