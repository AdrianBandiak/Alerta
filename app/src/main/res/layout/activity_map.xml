<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="3dp"
        android:translationZ="3dp"
        android:fitsSystemWindows="true"
        android:paddingTop="0dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:paddingHorizontal="0dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chips_filters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingHorizontal="6dp"
                android:paddingVertical="4dp"
                app:singleLine="true"
                app:singleSelection="false"
                app:chipSpacingHorizontal="6dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_info"
                    style="@style/App.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:includeFontPadding="false"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="9sp"
                    android:autoSizeMaxTextSize="13sp"
                    android:autoSizeStepGranularity="1sp"
                    android:text="@string/map_filters_info"
                    app:chipBackgroundColor="@color/chip_info_selector"
                    app:chipIcon="@drawable/ic_dot"
                    app:chipIconTint="@color/blue_700"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_hazard"
                    style="@style/App.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:includeFontPadding="false"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="9sp"
                    android:autoSizeMaxTextSize="13sp"
                    android:autoSizeStepGranularity="1sp"
                    android:text="@string/map_filters_hazard"
                    app:chipBackgroundColor="@color/chip_hazard_selector"
                    app:chipIcon="@drawable/ic_dot"
                    app:chipIconTint="@color/amber_700"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_critical"
                    style="@style/App.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:includeFontPadding="false"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="9sp"
                    android:autoSizeMaxTextSize="13sp"
                    android:autoSizeStepGranularity="1sp"
                    android:text="@string/map_filters_critical"
                    app:chipBackgroundColor="@color/chip_critical_selector"
                    app:chipIcon="@drawable/ic_dot"
                    app:chipIconTint="@color/red_700"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_team"
                    style="@style/App.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:includeFontPadding="false"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="9sp"
                    android:autoSizeMaxTextSize="13sp"
                    android:autoSizeStepGranularity="1sp"
                    android:text="@string/team"
                    app:chipBackgroundColor="@color/chip_team_selector"
                    app:chipIcon="@drawable/ic_dot"
                    app:chipIconTint="@color/green_700"/>
            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_center_pin"
            android:contentDescription="@string/cd_center_pin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/tip_move_map_pick"
            android:textSize="12sp"
            android:background="#B3FFFFFF"
            android:textColor="#212121"/>
    </FrameLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddMarkerFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="100dp"
        android:contentDescription="@string/cd_add_marker"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/white"
        app:backgroundTint="@color/amber_700"
        app:fabSize="normal" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        style="@style/Alerta.BottomNav"
        app:menu="@menu/menu_bottom_nav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
