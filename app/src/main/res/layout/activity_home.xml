<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/inter"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".app.home.HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:theme="@style/ThemeOverlay.Alerta.Toolbar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp">

            <LinearLayout
                android:id="@+id/brandContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/brandLogo"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/logo_alerta"
                    android:contentDescription="@string/content_desc_logo" />

                <TextView
                    android:id="@+id/brandTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/app_name"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:letterSpacing="0.02" />
            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipOnline"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:checkable="false"
                android:text="ONLINE"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:chipMinHeight="28dp"
                app:chipCornerRadius="16dp"
                app:chipIcon="@drawable/ic_status_dot"
                app:chipIconSize="12dp"
                app:iconStartPadding="4dp"
                app:chipStartPadding="6dp"
                app:chipEndPadding="6dp"
                app:chipStrokeWidth="0dp"
                app:chipBackgroundColor="@color/status_online_bg" />
        </com.google.android.material.appbar.MaterialToolbar>

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/subBar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            app:contentInsetStartWithNavigation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_location_placeholder"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textAppearance="?attr/textAppearanceTitleMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/bullet_dot"
                    android:textColor="#99000000"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/home_time_placeholder"
                    android:textColor="#99000000"
                    android:textAppearance="?attr/textAppearanceBodyLarge"/>
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:background="@color/background"
        android:paddingStart="@dimen/space_lg"
        android:paddingEnd="@dimen/space_lg"
        android:paddingBottom="@dimen/space_lg"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/searchContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_default"
                android:layout_marginTop="@dimen/space_md"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                android:backgroundTint="@color/searchbar_background"
                app:strokeColor="#1A000000"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/space_md">

                    <ImageView
                        android:id="@+id/iconSearch"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/hint_grey"
                        android:contentDescription="@string/content_desc_search_icon" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/search_hint"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/hint_grey"
                        android:textSize="14sp"
                        android:paddingStart="8dp"
                        android:inputType="text"
                        android:imeOptions="actionSearch" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMap"
                style="@style/Alerta.Card.Elevated"
                android:layout_width="match_parent"
                android:layout_height="@dimen/map_height"
                android:layout_marginTop="@dimen/space_md"
                app:cardCornerRadius="@dimen/radius_md"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/content_desc_map_card">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/mapContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFF0F0F0"
                        android:contentDescription="@string/content_desc_map_container"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardLegend"
                        style="@style/Alerta.Card.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="4dp"
                        app:cardCornerRadius="@dimen/radius_sm">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/space_sm">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="• Red = CRITICAL"
                                android:textColor="#D32F2F"
                                android:textSize="12sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="• Yellow = HAZARD"
                                android:textColor="#F9A825"
                                android:textSize="12sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="• Blue = INFO"
                                android:textColor="#1976D2"
                                android:textSize="12sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="• Shield = TEAM"
                                android:textColor="#388E3C"
                                android:textSize="12sp"/>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReportIncident"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_default"
                android:layout_marginTop="@dimen/space_md"
                android:text="@string/btn_report_incident"
                app:icon="@drawable/ic_alert_triangle_cutout"
                app:iconPadding="8dp"
                app:backgroundTint="@color/alerta_primary"
                android:textColor="@color/white"
                app:iconTint="@null"/>


            <LinearLayout
                android:id="@+id/quick_actions_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_sm"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateTask"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_default"
                    android:layout_weight="1"
                    android:text="@string/btn_create_task"
                    app:icon="@drawable/ic_task"
                    app:iconPadding="8dp"
                    app:strokeColor="@color/alerta_primary"
                    android:textColor="@color/alerta_primary"
                    app:iconTint="@color/alerta_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnJoinTeam"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_default"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/space_sm"
                    android:text="@string/btn_join_team"
                    app:icon="@drawable/ic_team"
                    app:iconPadding="8dp"
                    app:strokeColor="@color/alerta_primary"
                    android:textColor="@color/alerta_primary"
                    app:iconTint="@color/alerta_primary" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_lg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelMyTasks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/section_my_tasks"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/btnViewAllTasks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_view"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="4dp"
                    app:drawableTint="@color/text_secondary"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_task_home" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:paddingBottom="0dp"
        android:fitsSystemWindows="true"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconTint="@color/bottom_nav_icon_tint"
        app:itemTextColor="@color/bottom_nav_text_tint"
        app:itemActiveIndicatorStyle="@style/AlertaNavIndicatorNone"
        app:itemRippleColor="@color/bottom_nav_ripple" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
