<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Alerta" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:windowDisablePreview">true</item>

        <item name="colorPrimary">#E53935</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#FFCDD2</item>

        <item name="colorSecondary">#FF8F00</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSecondaryContainer">#FFE0B2</item>

        <item name="colorTertiary">#1565C0</item>
        <item name="colorOnTertiary">#FFFFFF</item>

        <item name="fontFamily">@font/inter</item>
        <item name="android:fontFamily">@font/inter</item>

        <item name="colorControlActivated">@color/status_online_bg</item>
        <item name="android:colorAccent">@color/status_online_bg</item>
        <item name="colorAccent">@color/status_online_bg</item>

        <item name="android:statusBarColor">@color/status_bar_gray</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="buttonStyle">@style/Widget.Material3.Button</item>

        <item name="chipStyle">@style/App.Chip.Filter</item>

        <item name="materialCardViewStyle">@style/Alerta.Card.Base</item>
        <item name="floatingActionButtonStyle">@style/Alerta.FAB</item>
    </style>

    <style name="ThemeOverlay.Alerta.Toolbar" parent="ThemeOverlay.Material3.ActionBar">
        <item name="chipStyle">@style/App.Chip.Filter</item>
    </style>

    <style name="App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:letterSpacing">0.02</item>

        <item name="android:minHeight">30dp</item>
        <item name="chipCornerRadius">12dp</item>

        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>

        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/chip_border_color</item>

        <item name="checkedIconVisible">true</item>
        <item name="chipIconVisible">true</item>
        <item name="ensureMinTouchTargetSize">false</item>

        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:foreground">@null</item>
    </style>

    <style name="Alerta.Card.Base" parent="Widget.Material3.CardView.Elevated">
        <item name="android:stateListAnimator">@null</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Alerta.Card.Elevated" parent="Alerta.Card.Base" />

    <style name="AlertaNavIndicatorNone">
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:color">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:alpha">0</item>
    </style>

    <style name="Alerta.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/amber_700</item>
        <item name="tint">@android:color/white</item>
        <item name="rippleColor">@color/outline</item>
    </style>

    <style name="Alerta.Button.Amber" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/amber_700</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@color/outline</item>
    </style>

    <style name="Alerta.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/amber_700</item>
        <item name="rippleColor">@color/outline</item>
    </style>

    <style name="Alerta.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">22dp</item>
        <item name="itemTextAppearanceActive">@style/Alerta.BottomNav.Text</item>
        <item name="itemTextAppearanceInactive">@style/Alerta.BottomNav.Text</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">2dp</item>
        <item name="itemActiveIndicatorStyle">@style/AlertaNavIndicatorNone</item>
        <item name="itemRippleColor">@color/bottom_nav_ripple</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextColor">@color/bottom_nav_text_tint</item>
    </style>

    <style name="Alerta.BottomNav.Text">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.015</item>
    </style>

    <style name="Alerta.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@drawable/bg_alerta_tabs</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicator">@drawable/alerta_tab_indicator</item>
        <item name="tabTextAppearance">@style/Alerta.TabText</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Alerta.TabText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>


    <style name="AlertaTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/hint_color_selector</item>
        <item name="android:textColorHint">@color/hint_color_selector</item>
        <item name="boxStrokeColor">@color/hint_color_selector</item>
        <item name="colorControlActivated">@color/alerta_primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="startIconTint">@color/alerta_primary</item>
        <item name="endIconTint">@color/alerta_primary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:labelTextSize">11sp</item>
    </style>

    <style name="AlertaTextInput.Dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/hint_color_selector</item>
        <item name="android:textColorHint">@color/hint_color_selector</item>
        <item name="boxStrokeColor">@color/hint_color_selector</item>
        <item name="colorControlActivated">@color/alerta_primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="startIconTint">@color/alerta_primary</item>
        <item name="endIconTint">@color/alerta_primary</item>
        <item name="android:popupElevation">6dp</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AlertaSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/AlertaSwitchOverlay</item>
    </style>

    <style name="AlertaSwitchOverlay" parent="">
        <item name="colorPrimary">@color/alerta_primary</item>
        <item name="colorSecondary">@color/alerta_primary</item>
    </style>

    <style name="Theme.Alerta.NoSplash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:windowSplashScreenAnimatedIcon"
            tools:targetApi="31">@null</item>
        <item name="android:windowSplashScreenIconBackgroundColor"
            tools:targetApi="31">@android:color/transparent</item>
        <item name="android:windowSplashScreenBackground"
            tools:targetApi="31">@android:color/transparent</item>
    </style>

    <style name="WelcomeGradient">
        <item name="android:textColor">@color/alerta_primary</item>
        <item name="android:shadowColor">@android:color/transparent</item>
    </style>


    <style name="ChatTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="TeamMembersTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.015</item>
    </style>

    <style name="TeamMembersSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.005</item>
    </style>


</resources>
